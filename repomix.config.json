{
  "output": {
    "filePath": "repomix-output.txt",
    "style": "markdown",
    "headerText": "# SpeechToText v3.0 - Repomix Codebase Package\n\nComplete codebase packaged with repomix for LLM analysis and code review.",
    "instructionFilePath": "",
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 5,
    "showLineNumbers": true
  },
  "include": [
    "**/*.py",
    "**/*.yaml",
    "**/*.yml",
    "**/*.md",
    "**/*.txt",
    "**/*.json",
    "**/*.toml",
    "**/*.cfg",
    "**/*.ini",
    "requirements*.txt",
    "setup.py",
    "pyproject.toml"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "**/__pycache__/**",
      "**/*.pyc",
      "**/node_modules/**",
      "**/.venv/**",
      "**/venv/**",
      "**/.git/**",
      "**/models/*.bin",
      "**/*.log",
      "**/bandit-report.json",
      "**/safety-report.json"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  }
}
