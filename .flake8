[flake8]
# Maximum line length
max-line-length = 100

# Ignore specific errors:
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by black)
# W503: line break before binary operator (conflicts with black)
# E402: module level import not at top of file (sometimes needed)
# F824: global name is unused - we declare globals for consistency even if read-only
ignore = E203,E501,W503,E402,F824

# Exclude directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    env,
    .eggs,
    *.egg,
    models

# Maximum complexity
max-complexity = 15
